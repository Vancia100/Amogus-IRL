<link rel="stylesheet" type="text/css" href="/styles/ListThing.css">

<div class = box>
    <h1>Host Game</h1>
</div>

<script src="script/getOptions.js"> </script>

<div class="buttonContainer">
    <div class="button" id="qrBtn">
        <h3 class = text1>
            QR-code
        </h3>
    </div>
    
    <button class="button" id = "settingsBtn" onclick="requestOptions()">
        <h3 class = text1>
            Settings
        </h3>
    </button>
    
    <div class="settingsMenue" id="settingsMenue">
        <ul id="settingslist">
            <li>
                <div class="settingsOption">
                    <img src="pictures/arrow.png" alt="icon of a arrow" class="arrowIcon">
                    <h3 class="text1">
                        Long Task:
                    </h3>
                </div>
            </li>
            <li>
                <div class="settingsOption">
                    <h3 class="text1">
                        Short Task:
                    </h3>
                </div>
            </li>
            <li>
                <div class="settingsOption">
                    <h3 class="text1">
                        Normal Task:
                    </h3>
                </div>
            </li>
        </ul>
    </div>

    <button class="button" id="startBtn">
        <h3 class = text1>
            Start!
        </h3>
    </button>

    <a href="/">
        <span id="backButton" class="button" >
                    <h3 class="text1" id="backButtonText">
                        Back
                    </h3>
        </span>
    </a>


</div>
